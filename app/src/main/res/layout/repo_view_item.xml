<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <variable
            name="githubRepo"
            type="com.jorlop89.githubrepos.model.RepoDTO" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tv_repo_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/repo_name_size"
            android:layout_margin="@dimen/row_item_margin_vertical"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Name"
            tools:text="Name"/>

        <TextView
            android:id="@+id/tv_repo_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/repo_description_size"
            android:layout_margin="@dimen/row_item_margin_vertical"
            app:layout_constraintTop_toBottomOf="@+id/tv_repo_name"
            android:text="Description"
            tools:text="Description"/>

        <TextView
            android:id="@+id/tv_login_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/repo_owner_size"
            android:layout_margin="@dimen/row_item_margin_vertical"
            app:layout_constraintTop_toBottomOf="@+id/tv_repo_description"
            android:text="Owner"
            tools:text="Owner"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
